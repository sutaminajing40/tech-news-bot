{
  "functions": {
    "api/slack-interactions.js": {
      "maxDuration": 30
    }
  },
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin", 
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, PUT, DELETE, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "X-Requested-With, X-HTTP-Method-Override, Content-Type, Cache-Control, Accept, X-Slack-Signature, X-Slack-Request-Timestamp"
        }
      ]
    }
  ]
}